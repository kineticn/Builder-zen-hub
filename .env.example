# BillBuddy Environment Variables
# Copy this file to .env.local and fill in your actual values

# Plaid Configuration (https://dashboard.plaid.com)
VITE_PLAID_CLIENT_ID=your_plaid_client_id_here
VITE_PLAID_SECRET=your_plaid_secret_here
VITE_PLAID_WEBHOOK_URL=http://localhost:5173/webhooks/plaid

# Google/Gmail OAuth Configuration (https://console.cloud.google.com)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret_here
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/oauth/callback

# Microsoft/Outlook OAuth Configuration (https://portal.azure.com)
VITE_MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
VITE_MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
VITE_MICROSOFT_REDIRECT_URI=http://localhost:5173/oauth/callback

# Optional: Production URLs
# VITE_GOOGLE_REDIRECT_URI=https://yourdomain.com/oauth/callback
# VITE_MICROSOFT_REDIRECT_URI=https://yourdomain.com/oauth/callback
# VITE_PLAID_WEBHOOK_URL=https://yourdomain.com/webhooks/plaid
